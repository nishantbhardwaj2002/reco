<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>signin.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>signin</servlet-name>
        <servlet-class>controller.Signin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>controller.Signup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signout</servlet-name>
        <servlet-class>controller.Signout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signout</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>newsfeed</servlet-name>
        <servlet-class>controller.Newsfeed</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newsfeed</servlet-name>
        <url-pattern>/newsfeed</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>newsItem</servlet-name>
        <servlet-class>controller.NewsItem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newsItem</servlet-name>
        <url-pattern>/newsItem</url-pattern>
    </servlet-mapping>
</web-app>